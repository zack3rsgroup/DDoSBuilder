<Window x:Class="DDoSBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DDoS Tool Builder by zack3r" 
        Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="DDoS Tool Builder by zack3r" 
                   FontSize="24" FontWeight="Bold" Foreground="#007ACC" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Target Configuration -->
        <GroupBox Grid.Row="1" Grid.ColumnSpan="3" Header="Target Configuration" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Target IP/Host:" Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTargetIP" Text="127.0.0.1" Margin="0,0,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Port:" Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtTargetPort" Text="80" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Attack Duration (seconds):" Margin="0,0,5,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDuration" Text="0" Margin="0,0,10,0"
                         ToolTip="0 = infinite"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Packet Size:" Margin="0,0,5,0"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtPacketSize" Text="1024" Margin="0,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Attack Methods -->
        <GroupBox Grid.Row="2" Grid.ColumnSpan="3" Header="Attack Methods" Margin="0,0,0,10">
            <WrapPanel Margin="5">
                <CheckBox x:Name="chkHTTP" Content="HTTP Flood (Layer 7)" IsChecked="True" Margin="10,5"/>
                <CheckBox x:Name="chkUDP" Content="UDP Flood" IsChecked="False" Margin="10,5"/>
                <CheckBox x:Name="chkSYN" Content="SYN Flood (TCP)" IsChecked="False" Margin="10,5"/>
            </WrapPanel>
        </GroupBox>

        <!-- Left Column -->
        <GroupBox Grid.Row="3" Grid.Column="0" Header="Performance Settings" Margin="0,0,0,10" Grid.ColumnSpan="3">
            <StackPanel Margin="5,0,-2,0">
                <TextBlock Text="Thread Count:" Margin="0,0,0,5"/>
                <Slider x:Name="sldThreads" Minimum="1" Maximum="1000" Value="100" 
                        Margin="0,0,0,5" TickFrequency="10" Width="720" HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding ElementName=sldThreads, Path=Value, StringFormat='Threads: {0}'}" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Delay Between Requests (ms):" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDelay" Text="10" Margin="0,0,0,10" Width="720" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>

        <!-- Right Column -->

        <!-- HTTP Specific Settings -->
        <GroupBox Grid.Row="4" Grid.ColumnSpan="3" Header="HTTP Flood Settings" 
                  Margin="0,0,0,10" Visibility="{Binding ElementName=chkHTTP, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="HTTP Path:" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" x:Name="txtHttpPath" Text="/" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="2" Text="HTTP Method:" Margin="0,0,5,0"/>
                <ComboBox Grid.Column="3" x:Name="cmbHttpMethod" SelectedIndex="0">
                    <ComboBoxItem Content="GET"/>
                    <ComboBoxItem Content="POST"/>
                    <ComboBoxItem Content="HEAD"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- Build Options -->
        <GroupBox Grid.Row="5" Grid.ColumnSpan="3" Header="Build Options" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Output File:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" x:Name="txtOutputPath" Text="C:\ddos_build.exe" Margin="0,0,5,0"/>
                <Button Grid.Column="2" Content="Browse..." Click="BrowseOutputPath" Width="80"/>
            </Grid>
        </GroupBox>

        <!-- Log Output -->
        <GroupBox Grid.Row="6" Grid.ColumnSpan="3" Header="Build Log" Margin="0,0,0,10">
            <TextBox x:Name="txtLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"
                     Background="#0F0F0F" Foreground="#00FF00" Height="150"/>
        </GroupBox>

        <!-- Build Button -->
        <Button Grid.Row="7" Grid.ColumnSpan="3" Content="🚀 BUILD DDoS EXECUTABLE" 
                Click="BuildExe" Height="45" FontSize="14" Background="#FF4444"
                BorderBrush="#FF6666" BorderThickness="2"/>
    </Grid>
</Window>